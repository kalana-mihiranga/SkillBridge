// messaging-service/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Thread {
  id        String    @id @default(uuid())
  bookingId String    @unique // one chat per booking
  createdAt DateTime  @default(now())
  messages  Message[]
}

model Message {
  id         String   @id @default(uuid())
  threadId   String
  senderId   String // menteeId or mentorId
  senderRole String // 'MENTEE' | 'MENTOR'
  body       String
  createdAt  DateTime @default(now())

  thread Thread @relation(fields: [threadId], references: [id])

  @@index([threadId, createdAt])
}


model RepoFile {
  id         String   @id @default(uuid())
  artifactId String
  path       String   // "src/index.ts"
  isDir      Boolean  @default(false)
  size       Int      @default(0)
  sha        String?  // Git blob/tree sha if available
  // store small text files (<= 200KB) for quick viewing; binaries not stored
  content    String? 

  artifact   Artifact @relation(fields: [artifactId], references: [id])

  @@unique([artifactId, path])
  @@index([artifactId, path])
}
